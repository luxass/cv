---
import PageLayout from "../layouts/PageLayout.astro";
import Link from "../components/Link.astro";

export const prerender = true;
---

<PageLayout title="404" description="404 - Page not found" empty={true}>
  <div class="flex flex-col items-center justify-center mt-12 text-center">
    <h1 class="text-8xl text-blue-600">404</h1>
    <p class="mb-8 text-2xl">Page not found</p>
    <Link href="/">Go back</Link>
  </div>
</PageLayout>
